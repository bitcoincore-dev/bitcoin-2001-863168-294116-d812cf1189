
BITCOIN_INCLUDES += -I$(srcdir)/ccl

# transaction and block logging

CCL_BITCOIND_SRC = \
  ccl/datalogger.cpp \
  ccl/cclutil.cpp \
  ccl/cclglobals.cpp \
  ccl/simulation.cpp

CCL_BITCOIND_HDR = \
  ccl/datalogger.h \
  ccl/cclutil.h \
  ccl/cclglobals.h \
  ccl/simulation.h 

libbitcoin_server_a_SOURCES += $(CCL_BITCOIND_SRC) $(CCL_BITCOIND_HDR)

# dataprinter binary 
# 

dataprinter_SOURCES = ccl/dataprinter.cpp
dataprinter_CPPFLAGS = $(BITCOIN_INCLUDES)

dataprinter_LDADD = \
   $(LIBBITCOIN_SERVER) \
   $(LIBBITCOIN_COMMON) \
   $(LIBUNIVALUE) \
   $(LIBBITCOIN_UTIL) \
   $(LIBBITCOIN_CRYPTO) \
   $(LIBLEVELDB) \
   $(LIBMEMENV) \
   $(LIBBITCOIN_WALLET) \
   $(LIBSECP256K1) \
   $(LIBBITCOIN_ZMQ) \
   $(ZMQ_LIBS) \
   $(BOOST_LIBS) \
   $(BDB_LIBS) \
   $(SSL_LIBS) \
   $(CRYPTO_LIBS) \
   $(MINIUPNPC_LIBS) \
   $(EVENT_PTHREADS_LIBS) \
   $(EVENT_LIBS)

dataprinter_LDFLAGS = $(RELDFLAGS) $(AM_LDFLAGS) $(LIBTOOL_APP_LDFLAGS)
bin_PROGRAMS += dataprinter

# printdb binary 
# 

printdb_SOURCES = ccl/printdb.cpp
printdb_CPPFLAGS = $(BITCOIN_INCLUDES)

printdb_LDADD = \
   $(LIBBITCOIN_SERVER) \
   $(LIBBITCOIN_COMMON) \
   $(LIBUNIVALUE) \
   $(LIBBITCOIN_UTIL) \
   $(LIBBITCOIN_CRYPTO) \
   $(LIBLEVELDB) \
   $(LIBMEMENV) \
   $(LIBBITCOIN_WALLET) \
   $(LIBSECP256K1) \
   $(LIBBITCOIN_ZMQ) \
   $(ZMQ_LIBS) \
   $(BOOST_LIBS) \
   $(BDB_LIBS) \
   $(SSL_LIBS) \
   $(CRYPTO_LIBS) \
   $(MINIUPNPC_LIBS) \
   $(EVENT_PTHREADS_LIBS) \
   $(EVENT_LIBS)

printdb_LDFLAGS = $(RELDFLAGS) $(AM_LDFLAGS) $(LIBTOOL_APP_LDFLAGS)
bin_PROGRAMS += printdb

